.collection
    &.collection-expandable


        .collection-item
            position relative
            min-height 48px
            height auto
            vertical-align middle
            line-height 28px
            padding-left 1px
            cursor pointer
            border-left 1px solid #e0e0e0
            border-right 1px solid #e0e0e0
            background white
            transition(all 300ms ease-out)

            // .collection-item-heading

            .collection-item-icon
                display block
                float left
                text-align center
                color white
                height 28px
                width 28px
                line-height 28px
                &.circle
                    border-radius(100%)

            .collection-item-actions
                position absolute
                display none
                top 0
                right 0
                background white
                width auto
                .item-action
                    font-size 1.5em
                    display block
                    float left
                    width 50px
                    line-height 45px
                    text-align center
                    color lightgrey
                    &:hover
                        color grey

            .collection-item-content
                position relative
                top 38px
                border-top 1px solid #e0e0e0
                display none
                padding 50px




            &:hover
                .collection-item-actions
                    display block


            &.isActive

                box-shadow(0px 4px 6px rgba(0,0,0,.1))
                margin 40px -40px
                padding-right 0
                height auto
                .collection-item-content
                    display block




